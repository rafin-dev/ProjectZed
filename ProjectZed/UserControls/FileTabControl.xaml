<UserControl x:Class="ProjectZed.FileTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectZed"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20px"/>
            <ColumnDefinition Width="5px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40px"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Disabled" x:Name="LineNumberScroll">
            <TextBlock Background="#12121a" FontSize="15" TextAlignment="Center" Foreground="White"
                   x:Name="LineNumber" LineHeight="25">
            </TextBlock>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
        </StackPanel>

        <RichTextBox Foreground="#f0f8ff" x:Name="FileTextBox" Grid.Column="2"
                     AcceptsReturn="True" AcceptsTab="True" Background="#13131f"
                     BorderThickness="0" FontSize="15" TextChanged="OnTextChanged" ScrollViewer.ScrollChanged="OnScrollChanged">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>

        <RichTextBox x:Name="MiniView" FontSize="2px" IsReadOnly="True" Background="#0a0a0f" Grid.Column="3" Padding="0, 5, 0, 0"
                    BorderThickness="0px" BorderBrush="Transparent" SelectionOpacity="0"/>
    </Grid>
</UserControl>
