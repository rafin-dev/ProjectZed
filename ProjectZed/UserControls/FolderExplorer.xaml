<UserControl x:Class="ProjectZed.FolderExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectZed"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="#060617" BorderThickness="1, 1, 5, 1" CornerRadius="0, 0, 0, 10">
            <StackPanel Orientation="Vertical" x:Name="FileStackPanel">
                <Label x:Name="FolderLabel" Content="No Folder" Foreground="White"/>
                <Separator />
                <Button x:Name="OpenFolderButton" Content="Open Folder" Background="AliceBlue" 
                        Margin=" 4, 4, 4, 4" Click="OpenFolderButtonClickedEventHandler"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
