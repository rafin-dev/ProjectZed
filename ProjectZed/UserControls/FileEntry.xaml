<UserControl x:Class="ProjectZed.FileEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectZed"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="25px">
    <Grid>
        <Button Background="Transparent" BorderThickness="0px" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Height="25px">
                <Image Source="/Assets/File.png" />
                <Label x:Name="FileLabel" Foreground="White" VerticalAlignment="Top" FontSize="12px" VerticalContentAlignment="Top">
                    Test
                </Label>
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
