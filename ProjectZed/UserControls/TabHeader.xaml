<UserControl x:Class="ProjectZed.TabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectZed"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             BorderThickness="0">
    <Grid Background="#1e1e26" Margin="0, 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" x:Name="TabHeaderLabel" HorizontalAlignment="Left" 
               Height="30" Margin="4, 1, 0, 0" VerticalAlignment="Top"
               Foreground="AliceBlue"/>
        
        <Button Grid.Column="2" Content="X" Height="19" Click="CloseButtonClicked" HorizontalAlignment="Right"
                VerticalAlignment="Center" Width="20" FontFamily="Courier New" FontWeight="Bold" FontStretch="Normal"
                FontSize="14" Background="#1e1e26" Foreground="AliceBlue" BorderThickness="0"/>
    </Grid>
</UserControl>
