<UserControl x:Class="ProjectZed.TabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectZed"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             BorderThickness="0"
             Background="Transparent"
             Height="30px"
             Margin="0">
    <Border Background="#11111f" BorderBrush="Transparent" CornerRadius="10, 10, 0, 0">

        <StackPanel Orientation="Horizontal" Background="Transparent">
            <Label Grid.Column="0" x:Name="TabHeaderLabel" HorizontalAlignment="Left" 
               Height="30" Margin="4, 1, 0, 0" VerticalAlignment="Top"
               Foreground="AliceBlue"/>

            <Button Grid.Column="2" Height="18" Click="CloseButtonClicked" HorizontalAlignment="Right"
                VerticalAlignment="Center" Width="18" Background="Transparent" Foreground="AliceBlue" BorderThickness="0">
                <Image Source="/Assets/Close.png"/>
            </Button>
        </StackPanel>
        
    </Border>
</UserControl>
