<UserControl x:Class="ProjectZed.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectZed"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10, 0, 10, 0" Background="Transparent">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

            <Button Width="20px" Height="20px" HorizontalAlignment="Right" VerticalAlignment="Center"
                Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="15"
                Click="OnClickMinimize">
                <Image Source="/Assets/minimize.png"/>
            </Button>

            <Separator Opacity="0" Width="15px"/>

            <Button Width="20px" Height="20px" HorizontalAlignment="Right" VerticalAlignment="Center"
                Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="15"
                Click="OnClickMaximize">
                <Image Source="/Assets/maximize.png"/>
            </Button>

            <Separator Opacity="0" Width="10px"/>

            <Button Width="20px" Height="20px" HorizontalAlignment="Right" VerticalAlignment="Center"
                Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="15"
                Click="OnClickClose">
                <Image Source="/Assets/Close.png"/>
            </Button>
            
        </StackPanel>
        
    </Grid>
</UserControl>
