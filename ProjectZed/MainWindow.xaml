<Window x:Class="ProjectZed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectZed"
        mc:Ignorable="d"
        Title="Zed" Height="720" Width="1280"
        KeyDown="KeyDownEventHandler"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        StateChanged="OnWindowStateChanged">
    <Border Background="Transparent" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30px"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border  Margin="0" Grid.Row="0" Background="#050512" CornerRadius="10, 10, 0, 0"  MouseDown="TopBarMouseDown">
                <local:TopBar/>
            </Border>
            
            <Grid Grid.Row="1" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15*"/>
                    <ColumnDefinition Width="85*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="0, 0, 0, 10"  Background="#15151f">
                    <local:FolderExplorer x:Name="FolderExplorerControl" Background="Transparent" BorderBrush="Transparent"/>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20px"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <local:ControlBar/>

                    <Border CornerRadius="0, 0, 10, 0" Grid.Row="1" Background="#1e1e26" >
                        <TabControl x:Name="TabControl" TabStripPlacement="Top" Background="Transparent" BorderBrush="Transparent">
                            <TabControl.Resources>
                                <Style TargetType="TabItem">
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Transparent" CornerRadius="8,8,0,0" Margin="0,0">
                                                    <ContentPresenter x:Name="ContentSite"  
                        VerticalAlignment="Center"  
                        HorizontalAlignment="Center"  
                        ContentSource="Header"  
                        Margin="0,0"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabControl.Resources>
                        </TabControl>
                    </Border>
                </Grid>

            </Grid>
        </Grid>
    </Border>

</Window>
